{
  "manifest_version": 2,
  "name": "Glocker Content Monitor",
  "version": "1.0",
  "description": "Reports problematic content to Glocker",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage"
  ],
  
  "incognito": "spanning",
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  
  "browser_action": {
    "default_title": "Glocker Status",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png"
  }
}
